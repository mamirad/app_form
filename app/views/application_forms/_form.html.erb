
<%= simple_form_for(@application_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cnic %>
    <%= f.input :age , collection: 5..100%>
    <%= f.input :gender, collection: ['male','female']%>
    <%= f.input :address %>
    <%= f.input :mobile_number %>
    <%= f.input :apply_for %>
    <%= f.input :highest_education %>
    <%= f.input :subject_or_areas %>
    
    <%= f.input :qualitative_research_experiences, collection: ['Designed interview questions ','Conducted qualitative interviews','Analysed qualitative interviews','Reported qualitative research','Published qualitative research'],as: :check_boxes%>
    <%= f.input :upload_cv ,as: :file%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
